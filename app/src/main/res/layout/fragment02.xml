<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/saoyisao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:padding="10dp"
            android:src="@drawable/a_q" />

        <TextView
            android:id="@+id/fenlei_sousuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="4"
            android:background="@drawable/edit_shape02"
            android:drawableLeft="@drawable/a_5"
            android:padding="6dp"
            android:paddingLeft="6dp"
            android:text="   微星笔记本"
            android:textColor="#ADAEAF"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:src="@drawable/a9v" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal">


        <ListView
            android:id="@+id/list_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"></ListView>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                android:layout_marginBottom="50dp"
                android:id="@+id/fragment_banner"
                android:layout_width="470dp"
                android:layout_height="150dp">
            </com.youth.banner.Banner>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fenlei_right_recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F3F5F7" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>